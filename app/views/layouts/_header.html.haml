#logo_outer
  %a#logo{:href => "/"}
    = image_tag("template/logo.png", :alt=>"Squidtree")
  #logo_bg.primary_bg_color

#s_top_links
  - if @user
    %a.login_link{:href => "/logout"}
      %i.icon-facebook-sign
      =@user.name
      [ logout ]
  - else
    %a.login_link{:href => "/login"}
      %i.icon-facebook-sign
      login

%nav#s_nav
  %ul
    %li.active
      %a{:href => "/blog/"} Blog
    %li
      %a{:href => "/portfolio/"} Portfolio
    %li#nav_spacer
    %li
      %a{:href => "/about/"} About
    %li
      %a{:href => "/contact/"} Contact
