= form_for @post do |f|
  -if @post.errors.any?
    %fieldset#error_explanation.notice.message
      %legend= "#{pluralize(@post.errors.count, "error")} prohibited this post from being saved:"
      %ul
        - @post.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :content
    = f.text_area :content
  .field
    = f.label :tags
    = f.text_field :tags, class: "tag_list", value: @post.tags_as_string
  .field
    = f.label :is_html, "HTML?"
    = f.check_box :is_html
  .field
    = f.label :is_private, "Private?"
    = f.check_box :is_private
  .field
    = f.label :is_published, "Published?"
    = f.check_box :is_published
  .actions
    = f.submit 'Save'
