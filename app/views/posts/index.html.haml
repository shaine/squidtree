- title "Blog"
- page_title "Blog"

- if can? :create, Post
  .admin_header
    = link_to "New Post", new_post_path, :class => "button"

- if @posts.empty?
  %p Sorry, whatever you're looking for doesn't seem to be here.
- else
  .index_collection
    = render :partial => "post", :collection => @posts, :spacer_template => "post_separator"

= will_paginate @posts, :inner_window => 3

