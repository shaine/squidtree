= form_for @link do |f|
  -if @link.errors.any?
    %fieldset#error_explanation.notice.message
      %legend= "#{pluralize(@link.errors.count, "error")} prohibited this link from being saved:"
      %ul
        - @link.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :url, "URL"
    = f.text_field :url
  .field
    = f.label :comment
    = f.text_area :comment
  .actions
    = f.submit 'Save'
