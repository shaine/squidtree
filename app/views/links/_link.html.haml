- title = link.user.name
- title = "#{title}<br>#{link.comment}" unless link.comment.empty?
.link_line
  %span.admin.left
    - if can? :destroy, link
      = link_to raw("<i class='icon-trash'></i>"), link, method: :delete, data: { confirm: 'Are you sure?' }, :title => 'Delete'
    - if can? :edit, link
      = link_to raw("<i class='icon-pencil'></i>"), edit_link_path(link), :title => 'Edit'
  %a{:href => link.url, :target => "_blank", :class => link.color_class, :title => title}= link.title
